		 return false;
	 }
		dojo.xhrPost({
			url: url_companytype,	
			content:{ 
			    'company_type':company_type
			},		    
			handleAs:"json",
			load: function(data) {
				//alert(data.type);
				if(data.type==1){
					dijit.byId('product_name').set('readonly',false); 
					dijit.byId('product_name').set('required',true);
					dijit.byId('product_name').disabled=false; 
